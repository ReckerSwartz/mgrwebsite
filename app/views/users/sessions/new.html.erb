<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="row">
          <div class="input-field col s12 center">
            <%= image_tag("Asset2.svg", :alt => "rss feed", :class =>'responsive-img valign', :width =>'100'  ) %>
            <p class="center login-form-text">Student Login</p>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="small material-icons prefix">perm_identity</i>
            
            
            <%= f.email_field :email, autofocus: true %>
            <%= f.label :email %>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="small material-icons prefix">lock_outline</i>
            
            <%= f.password_field :password, autocomplete: "off" %>
           <%= f.label :password %><br />
          </div>
        </div>
        <div class="row">          
          <div class="input-field col s12 m12 l12  login-text">
            <% if devise_mapping.rememberable? -%>
            
                  <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      
            <% end -%>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
        <%= f.submit "Log in" ,:class => 'btn col s12' %>
            
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6 m6 l6">
            <p class="margin medium-small"><%=link_to "Register Now!", new_user_registration_url %></p>
          </div>
          <div class="input-field col s6 m6 l6">
              <p class="margin right-align medium-small"><%= link_to 'Forgot password ?', new_user_password_url %></p>
          </div>          
        </div>

      <%end%>
    </div>
  </div>


